# ========================================
# DATABASE CONFIGURATION
# ========================================

# Database Type: postgresql or mongodb
DATABASE_TYPE=postgresql

# PostgreSQL Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amazon_deals
DB_USER=your_username
DB_PASSWORD=your_password



# ========================================
# API CONFIGURATION
# ========================================

API_HOST=0.0.0.0
API_PORT=8000
API_DEBUG=True
API_TITLE=Amazon Deals API
API_VERSION=1.0.0

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# ========================================
# SCRAPER CONFIGURATION
# ========================================

# Delay between requests (seconds) - Respect rate limits!
SCRAPER_DELAY=3
SCRAPER_MIN_DELAY=2
SCRAPER_MAX_DELAY=5

# User Agent
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36

# Maximum retries on failure
MAX_RETRIES=3

# Timeout for requests (seconds)
REQUEST_TIMEOUT=30

# ========================================
# PROXY CONFIGURATION (Optional)
# ========================================

USE_PROXY=false
PROXY_URL=http://proxy.example.com:8080
PROXY_USERNAME=
PROXY_PASSWORD=

# ========================================
# REDIS CONFIGURATION (Optional - for caching)
# ========================================

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# ========================================
# LOGGING CONFIGURATION
# ========================================

LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# ========================================
# SECURITY
# ========================================

# Secret key for JWT or sessions
SECRET_KEY=your-secret-key-change-this-in-production

# API Key for protected endpoints (optional)
API_KEY=

# ========================================
# SCRAPING LIMITS
# ========================================

# Maximum products to scrape per session
MAX_PRODUCTS_PER_SESSION=1000

# Maximum pages to scrape
MAX_PAGES=50

# ========================================
# AMAZON SPECIFIC
# ========================================

# Amazon base URL (change for different regions)
AMAZON_BASE_URL=https://www.amazon.com

# Amazon Product Advertising API (if using official API)
AMAZON_ACCESS_KEY=
AMAZON_SECRET_KEY=
AMAZON_ASSOCIATE_TAG=

# ========================================
# CELERY (Optional - for background tasks)
# ========================================

CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ========================================
# DEVELOPMENT
# ========================================

# Set to true to use sample data instead of scraping
USE_SAMPLE_DATA=false

# Enable debug mode
DEBUG=true
